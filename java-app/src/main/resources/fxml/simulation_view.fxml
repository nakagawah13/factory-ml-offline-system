<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.factory.ml.controller.SimulationViewController">
    <VBox spacing="10" alignment="CENTER" layoutX="20" layoutY="20">
        <Label text="What-If Simulation" styleClass="header"/>
        <Button text="Load Data" onAction="#handleLoadData"/>
        <Button text="Run Simulation" onAction="#handleRunSimulation"/>
        <Label fx:id="resultLabel" text="Results will be displayed here."/>
    </VBox>
</AnchorPane>